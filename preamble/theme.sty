% Color ------------------------------------------------------------------------
\definecolor{nu purple}{HTML}{4E2A84}
\hypersetup{colorlinks,breaklinks,urlcolor=nu purple, linkcolor=nu purple}

% Font -------------------------------------------------------------------------
\defaultfontfeatures{Mapping=tex-text}
\setmainfont{Fontin}[
  Path=./font/,
  Extension=.otf,
  SmallCapsFont = *-SmallCaps,
  BoldFont = *-Bold,
  ItalicFont = *-Italic
]
\font\fb=''[cmr10]'' %for use with \LaTeX command

% Title ------------------------------------------------------------------------
\titleformat{\section}{\Large\scshape\raggedright}{}{0em}{}[\titlerule]
\titlespacing{\section}{0pt}{3pt}{5pt}
\titleformat{\subsection}{\large\scshape\raggedright}{}{0em}{}[]
\titlespacing{\subsection}{0pt}{0pt}{3pt}

% Comment ----------------------------------------------------------------------
\setlength{\TPHorizModule}{30mm}
\setlength{\TPVertModule}{\TPHorizModule}
\textblockorigin{2mm}{0.65\paperheight}
\setlength{\parindent}{0pt}
\pagestyle{empty} % non-numbered pages

% Margins ---------------------------------------------------------------------
\geometry{bottom=0.5in, top=0.5in, left=1in, right=1in}